<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape >
            <solid android:color="@color/banckground_color" /> <!-- 背景色solid -->
            <stroke
                android:width="1px"
                android:color="#9b9b9b" /> <!-- 边框设置 -->
        </shape>
    </item>
    <item android:state_selected="true">
        <shape >

            <solid android:color="@color/white" /> <!-- 背景色solid -->
            <stroke
                android:width="1px"
                android:color="#ff6600" /> <!-- 边框设置 -->
        </shape>
    </item>
</selector>



