<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.vgtech.common.view.photodraweeview.PhotoDraweeView
            android:id="@+id/photo_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:failureImage="@drawable/img_default"
            app:failureImageScaleType="centerInside"
            app:placeholderImage="@drawable/img_default"
            app:placeholderImageScaleType="fitCenter"
            app:progressBarAutoRotateInterval="1000"
            app:progressBarImage="@drawable/ic_loading"
            app:progressBarImageScaleType="centerInside"/>
        <com.vgtech.common.view.photodraweeview.PhotoDraweeView
            android:id="@+id/userphoto_view"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent"
            app:failureImage="@mipmap/default_user_photo_big"
            app:failureImageScaleType="centerInside"
            app:placeholderImage="@mipmap/default_user_photo_big"
            app:placeholderImageScaleType="fitCenter"
            app:progressBarAutoRotateInterval="1000"
            app:progressBarImage="@drawable/ic_loading"
            app:progressBarImageScaleType="centerInside"/>
        <LinearLayout
            android:id="@+id/del_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/img_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/imagecheck_toast"
                android:textColor="@color/white" />


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>