<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/cp_img"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/cp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cp_img"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/cp_img"
        android:singleLine="true"
        android:text="ssss"
        android:textColor="@color/text_black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/cp_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_name"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/cp_img"
        android:lineSpacingExtra="5dp"
        android:text="aaaaaaaaaaa"
        android:textColor="@color/comment_grey"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_desc"
        android:layout_toRightOf="@id/cp_img"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_assess" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已完成"
            android:textColor="@color/comment_grey"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableRight="@drawable/icon_next"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="查看报告 "
        android:textColor="@color/text_black"
        android:textSize="14sp" />

</RelativeLayout>
